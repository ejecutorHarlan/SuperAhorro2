<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/buscar/{{link.string}}" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control" name="string" placeholder="Articulo a buscar" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Buscar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container p-4">
    <div class="row">
        <p class="m-2">Nombre: {{link.nombre}}</p>
        <p class="m-2">precio: {{link.precio}}</p>
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <p class="m-2">Nombre: {{link.nombre}}</p>
                    <p class="m-2">Precio: {{precio}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="com-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay Articulos guardados</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>